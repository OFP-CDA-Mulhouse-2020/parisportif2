{% use 'bootstrap_4_layout.html.twig' %}

{% block form_row %}
    <div class="mb-3">
        <div class="mb-2">
            <span style="color:mediumblue; font-style:italic; font-weight:500;" class="fs-6">
                {{ form_label(form) }}
            </span>
        </div>

        <div>
            <span>
                {{ form_widget(form) }}
            </span>
        </div>

    </div>
{% endblock %}

{# CHECKBOX #}
{% block checkbox_widget %}
    <div class="pt-4">
        {{- parent() -}}
    </div>

{% endblock %}

{# RANGE #}
{% block range_widget %}
<div class="pt-4 range">
    <div class="sliderValue">
        <span>100</span>
    </div>

    <div class="field">
        <div class="value left">
            0
        </div>
        {#        {%- if type is defined and (type == 'range') %}#}
        {#            #}{# Attribute "required" is not supported #}
        {#            {%- set required = false -%}#}
        {#        {% endif %}#}
        {{- parent() -}}
        <div class="value right">
            200
        </div>


    </div>

    {% endblock %}

    {# SUBMIT #}
    {% block submit_widget %}
        <div class="pt-4 mb-4">
            {%- set attr = attr|merge({class: (attr.class|default('btn btn-md btn-primary w-100'))|trim}) -%}
            {{- parent() -}}
        </div>

    {% endblock %}
