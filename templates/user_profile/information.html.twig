{% extends 'user_profile/user_profile.html.twig' %}

{% block main %}
	<h3>Mes informations</h3>
	<h4>Mon identit√©</h4>

	{% if editedIdentity %}
		{{form_start(identityForm, {"multipart":"true"})}}
			{{ form_widget(identityForm) }}
		{{form_end(identityForm)}}
			<a href="/app/profile/information" class="btn btn-danger"> <i class="fa fa-times" aria-hidden="true"></i>
		</a>

	{% else %}
		<form class="" action="" method="post">
			{{ form_row(identityForm.lastName, { 'attr':{'disabled':'disabled'} }) }}
			{{ form_row(identityForm.firstName, { 'attr':{'disabled':'disabled'} }) }}
			{{ form_row(identityForm.birthDate, { 'attr':{'disabled':'disabled'} }) }}
		</form>
			<a href="/app/profile/edit/identity" class="btn btn-primary">
				<i class="fa fa-edit" aria-hidden="true"></i>
			</a>
	{% endif %}
	<br><br>

<h4>Mon adresse</h4>




	{% if editedAddress %}
		{{ form(addressForm) }}
		<a href="/app/profile/information" class="btn btn-danger">
			<i class="fa fa-times" aria-hidden="true"></i>
		</a>

	{% else %}
		<form class="" action="" method="post">
			{{ form_row(addressForm.addressNumberAndStreet, { 'attr':{'disabled':'disabled'} }) }}
			{{ form_row(addressForm.zipCode, { 'attr':{'disabled':'disabled'} }) }}
			{{ form_row(addressForm.city, { 'attr':{'disabled':'disabled'} }) }}
			{{ form_row(addressForm.country, { 'attr':{'disabled':'disabled'} }) }}
		</form>
		<a href="/app/profile/edit/address" class="btn btn-primary">
			<i class="fa fa-edit" aria-hidden="true"></i>
		</a>
	{% endif %}
	<br><br>

{% endblock %}
