{% extends 'base.html.twig' %}

{% block title %}
	"Nom site de pari sportif "
{% endblock %}

{% block body %}

	{# HEADER #}
	{% include "partials/header.html.twig" %}

	{# HOMEPAGE CONTENT #}
	<section class="container-fluid" id="page-content">
		<div
			class="row">
			{# ASIDE LEFT #}
			<div class="col-sm-12 col-md-3">
				<aside
					class="container-fluid aside-left">
					{# encart publicitaire #}
					<div class="row card mt-4">
						<div class="container-fluid col-sm-12 advertising-insert-1" style="height:20vw; min-height:280px;">
							Espace Publicitaire 1
						</div>
					</div>

					{# Navigation pari #}
					<div class="row card mt-4">
						<div class="container-fluid col-sm-12 nav-bet">
							<div
								class="accordion accordion-flush" id="accordionFlushExample">
								{# 1 #}
								<div class="accordion-item">
									<h2 class="accordion-header" id="flush-headingOne">
										<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
											Tendances du moment
										</button>
									</h2>
									<div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
										<div class="accordion-body">
											Contenu à insérer ici !
										</div>
									</div>
								</div>

								{# 2 #}
								<div class="accordion-item">
									<h2 class="accordion-header" id="flush-headingTwo">
										<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
											Paris Populaires
										</button>
									</h2>
									<div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlushExample">
										<div class="accordion-body">
											Contenu à insérer ici !
										</div>
									</div>
								</div>
								{# 3 #}
								<div class="accordion-item">
									<h2 class="accordion-header" id="flush-headingThree">
										<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
											Paris Boostés
										</button>
									</h2>
									<div id="flush-collapseThree" class="accordion-collapse collapse" aria-labelledby="flush-headingThree" data-bs-parent="#accordionFlushExample">
										<div class="accordion-body">
											Contenu à insérer ici !
										</div>
									</div>
								</div>
								{# 4 #}
								<div class="accordion-item">
									<h2 class="accordion-header" id="flush-headingFour">
										<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseFour" aria-expanded="false" aria-controls="flush-collapseFour">
											La grosse cote
										</button>
									</h2>
									<div id="flush-collapseFour" class="accordion-collapse collapse" aria-labelledby="flush-headingFour" data-bs-parent="#accordionFlushExample">
										<div class="accordion-body">
											Contenu à insérer ici !
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</aside>
			</div>

			{# SECTION CENTRAL #}
			<div class="col-sm-12 col-md-6">
				<section class="central">
					<div class="container-fluid p-0">
						<div class="row mt-4">
							<div class="col-sm-12 p-0">
								<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
									<ol class="carousel-indicators">
										<li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></li>
										<li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></li>
										<li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></li>
									</ol>
									<div
										class="carousel-inner" style="height:20vw; min-height:280px;">
										{# slide 1 #}
										<div class="carousel-item h-100 active">
											<img src="https://placehold.it/1600x900/adadad/eaeaea?text=Football" class="d-block w-100" alt="..." style="object-fit:cover; width: auto;height:100%;">
										</div>
										{# slide 2 #}
										<div class="carousel-item h-100">
											<img src="https://placehold.it/1600x900/e3e3e3/adadad?text=Basket" class="d-block w-100" alt="..." style="object-fit:cover; width: auto;height:100%;">
										</div>
										{# slide 3 #}
										<div class="carousel-item h-100">
											<img src="https://placehold.it/1600x900/a3a3a3/cbcbcb?text=Tennis" class="d-block w-100" alt="..." style="object-fit:cover; width: auto;height:100%;">
										</div>
									</div>
									{# controls #}
									<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
										<span class="carousel-control-prev-icon" aria-hidden="true"></span>
										<span class="visually-hidden">Previous</span>
									</a>
									<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
										<span class="carousel-control-next-icon" aria-hidden="true"></span>
										<span class="visually-hidden">Next</span>
									</a>
								</div>
							</div>

							{########### BET BOARD CONTENT ###########}
							<div class="col-sm-12 mt-4 bet-board card p-2">
								{% block betBoardContent %}
									{# place content here #}
								{% endblock %}
							</div>

						</div>
					</div>
				</section>
			</div>

			{# ASIDE RIGHT #}
			<div class="col-sm-12 col-md-3">
				<aside class="container-fluid aside-right">
					<div class="row card mt-4 p-2">
						<section class="col-sm-12 bet-ticket">
							<h6>Ticket de paris :</h6>
							<p>Ajouter des paris</p>
							<div class="col-12 d-flex justify-content-center">
								<button type="button" class="btn btn-danger btn-sm">Pariez !</button>
							</div>
						</section>
					</div>
					<div class="row card mt-4 p-2">
						<section class="col-sm-12 bet-search">
							<form class="row g-3">
								<div class="col-12">
									<label for="inputBetSearch" class="form-label">
										<h6>Chercher un pari</h6>
									</label>
									<input type="text" class="form-control" id="inputBetSearch" placeholder="placeholder">
								</div>
								<div class="col-12 d-flex justify-content-center">
									<button type="submit" class="btn btn-danger btn-sm">Rechercher</button>
								</div>
							</form>
						</section>
					</div>
					<div class="card row mt-4">
						<section class="col-sm-12 mt-3 advertising-insert-2" style="height:200px;">
							Espace Publicitaire 2
						</section>
					</div>
				</aside>

			</div>
		</div>
	</section>

	{# FOOTER #}
	{% include "partials/footer.html.twig" %}

{% endblock %}
