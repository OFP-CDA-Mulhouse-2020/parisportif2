
    <h4>Football - Top du moment</h4>
    <table class="table table-hover fw-bold">
        <thead>
        <tr>
            <th scope="col" colspan="2">Match</th>
            <th class="text-center" scope="col">Equipe à domicile</th>
            <th class="text-center" scope="col">Match Nul</th>
            <th class="text-center" scope="col">Equipe à l'extérieur</th>

        </tr>
        </thead>
        <tbody>
        {% for bet in listOfBet %}

        <tr>
                    <td class="" colspan="2">
                        <p>  Strasbourg - Lyon</p>
                        <p>{{ bet.betLimitTime|date("l d F - H:i")}}</p>
                        <p> Ligue 1 Ubereats</p>
                    </td>
            {% for odds in bet.listOfOdds %}
                <td class="text-center"><a class="btn btn-secondary btn-lg active" role="button" aria-pressed="true" href="app/cart/add/{{ bet.id }}/{{ loop.index0 }}">{{ odds }}</a></td>
            {% endfor %}


            </tr>
        {% endfor %}

        </tbody>
    </table>
