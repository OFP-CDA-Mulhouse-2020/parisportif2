<div class="col-sm-12 bet-board card p-2">

    <h5>{{ sport }} - {{ event.competition.name }} - {{ event.name }} :</h5>
    <h5>{{ event.teams[0] }} - {{ event.teams[1] }}</h5>
    <h6>{{ event.eventDateTime|date("l d F - H:i") }} {{ event.eventTimeZone }} - Lieu : {{ event.location }}</h6>

    {% for bet in listOfBet %}

    {%  if bet.typeOfBet.betType == '1N2' %}
        <hr>
        <h4>Résultat du match</h4>
    <table class="table table-hover fw-bold">
        <thead>
        <tr>
            <th class="text-center" scope="col">Equipe à domicile</th>
                <th class="text-center" scope="col">Match Nul</th>
            <th class="text-center" scope="col">Equipe à l'extérieur</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                {% for odds in bet.listOfOdds %}
                    <td class="text-center">
                        <a type="button" class="btn btn-secondary btn-lg btn-block" role="button" aria-pressed="true" href="/app/cart/add/{{ bet.id }}/{{ loop.index0 }}">{{ odds[1] }}</a>
                    </td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

        {% endif %}

        {% endfor %}

    {% for bet in listOfBet %}

        {%  if bet.typeOfBet.betType == '1-2' %}
            <hr>
            <h4>Résultat du match</h4>
            <table class="table table-hover fw-bold">
                <thead>
                <tr>
                    <th class="text-center" scope="col">Equipe à domicile</th>
                    <th class="text-center" scope="col">Equipe à l'extérieur</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    {% for odds in bet.listOfOdds %}
                        <td class="text-center">
                            <a type="button" class="btn btn-secondary btn-lg btn-block" role="button" aria-pressed="true" href="/app/cart/add/{{ bet.id }}/{{ loop.index0 }}">{{ odds[1] }}</a>
                        </td>
                    {% endfor %}
                </tr>
                </tbody>
            </table>

        {% endif %}

    {% endfor %}



    {% for bet in listOfBet %}

    {%  if bet.typeOfBet.betType == 'over-under' %}
        <hr>
        <h4>Over/Under</h4>
        <div class="row">
            {% for odds in bet.listOfOdds %}
                <div class="col-6">
                    <a type="button" class="btn btn-secondary btn-lg btn-block" role="button" aria-pressed="true" href="/app/cart/add/{{ bet.id }}/{{ loop.index0 }}">{{ odds[0] }} - {{ odds[1] }}</a>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    {% endfor %}



    {% for bet in listOfBet %}

        {%  if bet.typeOfBet.betType == 'score exact' %}
            <hr>
            <h4>Score Exact</h4>
        <div class="row">
            {% for odds in bet.listOfOdds %}
                <div class="col-4">
                    <a type="button" class="btn btn-secondary btn-lg btn-block" role="button" aria-pressed="true" href="/app/cart/add/{{ bet.id }}/{{ loop.index0 }}">{{ odds[0] }} - {{ odds[1] }}</a>
                </div>
            {% endfor %}
        </div>

        {% endif %}

    {% endfor %}




    {% for bet in listOfBet %}

        {%  if bet.typeOfBet.betType == 'mi-temps fin de match' %}
            <hr>
            <h4>Mi-temps/Fin du match</h4>
            <div class="row">
                {% for odds in bet.listOfOdds %}
                    <div class="col-12">
                        <a type="button" class="btn btn-secondary btn-lg btn-block" role="button" aria-pressed="true" href="/app/cart/add/{{ bet.id }}/{{ loop.index0 }}">{{ odds[0] }} - {{ odds[1] }}</a>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

    {% endfor %}

</div>
