<div class="col-sm-12 bet-board card p-2">

    <h4>{{ sport }} - {{ event.competition.name }} - {{ event.name }} :</h4>
    <h5>{{ event.teams[0] }} - {{ event.teams[1] }}</h5>
    <h5>{{ event.eventDateTime|date("l d F - H:i") }} {{ event.eventTimeZone }} - Lieu : {{ event.location }}</h5>

    <hr>
    Paris Simple
    <table class="table table-hover fw-bold">
        <thead>
        <tr>
            <th scope="col" colspan="2">Match</th>
            <th class="text-center" scope="col">Equipe à domicile</th>
                <th class="text-center" scope="col">Match Nul</th>
            <th class="text-center" scope="col">Equipe à l'extérieur</th>

        </tr>
        </thead>
        <tbody>
        {% for bet in listOfBet %}

            {%  if bet.typeOfBet.betType == '1N2' %}
            <tr>
                <td class="" colspan="2">
                    <p>{{ bet.event.teams[0] }} - {{ bet.event.teams[1] }}<br>
                        {{ bet.event.eventDateTime|date("l d F - H:i")}}<br>
                        {{ bet.event.name }} - {{ bet.event.competition.name }}<br>
                        <a href="/app/sport/{{ sport|lower }}/event/{{ bet.event.id }}/">+ de paris</a></p>
                </td>
                {% for odds in bet.listOfOdds %}
                    <td class="text-center"><a type="button" class="btn btn-secondary btn-lg btn-block" role="button" aria-pressed="true" href="/app/cart/add/{{ bet.id }}/{{ loop.index0 }}">{{ odds }}</a></td>
                {% endfor %}


            </tr>
            {% endif %}

        {% endfor %}
        </tbody>
    </table>

    <hr>
    Under/Over

    {% for bet in listOfBet %}

    {%  if bet.typeOfBet.betType == '1N2' %}
        {{ bet.id }}
    {% endif %}

    {% endfor %}

    <hr>
    Score Exact

</div>
