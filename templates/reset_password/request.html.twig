{% extends 'base.html.twig' %}
{% form_theme requestForm 'form_layout/login-register_layout.html.twig' %}

{% block title %}Changer votre mot de passe{% endblock %}

{% block body %}
    {# HEADER #}
    {% include "partials/_header_band_logo.html.twig" %}

    <div class="container">
        <div class="row">
            <div class="col-sm-offset-0 col-sm-12 col-md-offset-3 col-md-6 mx-auto">

                <h1 class="h3 py-5">Changer votre mot de passe</h1>

                {% for flashError in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                {% endfor %}

                {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div>
                    <small>
                        Entrer votre adresse email pour que l'on vous envoi un lien pour changer votre mot de passe.
                    </small>
                </div>

                <button class="btn btn-primary w-100 h-100 mt-5 mb-5">Envoyer le lien</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
        <div class="row"></div>
    </div>

{% endblock %}