{% extends 'base.html.twig' %}

{% block title %}Changer votre mot de passe{% endblock %}

{% block body %}
    {% include "partials/_header_logo.html.twig" %}

    <div class="container">
        <div class="row">
            <div class="col-sm-offset-0 col-sm-12 col-md-offset-3 col-md-6 mx-auto">

                <h1 class="h3 py-5">Changer votre mot de passe</h1>

                {{ form_start(resetForm) }}
                {{ form_row(resetForm.plainPassword) }}
                <button class="btn btn-primary mt-3">Changer mon mot de passe</button>
                {{ form_end(resetForm) }}
            </div>
        </div>
        <div class="row"></div>
    </div>
{% endblock %}
